<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/fupsLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fups"
        tools:layout_editor_absoluteY="29dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/howToLoginId"
        android:layout_width="335dp"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/login_info"
        android:textAlignment="center"
        android:textColor="@color/tepe"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fupsLogo" />


    <androidx.cardview.widget.CardView
        android:id="@+id/frameLayout"

        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/white_button_pressed_effect"
        android:layout_width="128dp"
        android:layout_height="55dp"
        android:background="@drawable/edit_round"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="@+id/passwordId2"
        app:layout_constraintTop_toTopOf="@+id/gsmId"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:text="@string/country_code"
            android:textColor="@color/gray"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/_plus90"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="94dp"
            android:paddingTop="21dp"
            app:srcCompat="@drawable/country_icon" />


    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/forgetPasswordId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:fontFamily="@font/roboto_bold"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="@string/forget_password"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordId2"
        tools:ignore="TouchTargetSizeCheck" />


    <ImageButton
        android:id="@+id/info_button"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginEnd="21dp"
        android:background="@color/background"
        android:clickable="true"
        android:focusable="true"
        android:paddingVertical="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@+id/forgetPasswordId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/forgetPasswordId"
        app:srcCompat="@drawable/ic_stat_name"
        app:tint="@color/blue"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />



    <androidx.cardview.widget.CardView
        android:id="@+id/loginCardId"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/edit_round"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/blue_button_pressed_effect"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/passwordId2"
        app:layout_constraintStart_toStartOf="@+id/passwordId2"
        app:layout_constraintTop_toBottomOf="@+id/forgetPasswordId">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/loginId"

                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/giris"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/hesabÄ±nlaNelerYapabilirsin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="20dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto_medium"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="@string/hesabinla_neler_yapabilirsin"
        android:textAlignment="viewStart"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginCardId"
        tools:ignore="TouchTargetSizeCheck" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="151dp"
        android:layout_marginTop="277dp"
        android:layout_marginBottom="32dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/bannerone"
                android:layout_width="276dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                android:paddingTop="0dp"
                app:cardBackgroundColor="@color/white"

                app:layout_constraintBottom_toBottomOf="@+id/horizontalScrollView"
                app:layout_constraintStart_toStartOf="@+id/horizontalScrollView"
                app:layout_constraintTop_toTopOf="@+id/horizontalScrollView">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="107dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="103dp"
                    android:layout_marginTop="38dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/social_account"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="164dp"
                    tools:layout_editor_absoluteY="544dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="153dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="103dp"
                    android:layout_marginTop="66dp"
                    android:layout_marginBottom="46dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/social_account_description"
                    android:textColor="@color/gray"
                    android:textSize="14sp"

                    app:layout_constraintBottom_toBottomOf="@+id/horizontalScrollView"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="121dp" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/social_01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-5.7dp"
                    android:layout_marginBottom="0dp"
                    app:srcCompat="@drawable/social_01"
                    app:shapeAppearanceOverlay="@style/roundImageview"/>

                <ImageView
                    android:id="@+id/image_socail_shape"
                    android:layout_width="26dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/social_shape"
                    tools:layout_editor_absoluteX="118dp"
                    tools:layout_editor_absoluteY="548dp" />

                <ImageView
                    android:id="@+id/chevron"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="248dp"
                    android:layout_marginTop="132dp"
                    app:srcCompat="@drawable/chevron" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/bannertwo"
                android:layout_width="276dp"
                android:layout_height="150dp"
                android:layout_marginLeft="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp">

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="107dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="103dp"
                    android:layout_marginTop="38dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/game_account"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="164dp"
                    tools:layout_editor_absoluteY="544dp" />

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="103dp"
                    android:layout_marginTop="66dp"
                    android:layout_marginBottom="46dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/game_e_pin_description"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-5.5dp"
                    app:shapeAppearanceOverlay="@style/roundImageview"
                    app:srcCompat="@drawable/game_02" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/playstore" />

                <ImageView
                    android:id="@+id/chevron59"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="248dp"
                    android:layout_marginTop="132dp"
                    app:srcCompat="@drawable/chevron" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </HorizontalScrollView>



    <com.google.android.material.textfield.TextInputLayout

        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"

        android:id="@id/gsmId"
       android:layout_width="0dp"
       android:layout_height="56dp"
       android:layout_marginStart="16dp"
       android:layout_marginTop="40dp"
       android:layout_marginEnd="20dp"
       android:layout_marginBottom="20dp"
       android:ems="10"
       android:fontFamily="@font/roboto_regular"
       android:hint="@string/gsm_no"
       android:inputType="number"
       android:textColor="@color/blue"
       android:textColorHint="@color/gray"
       android:textSize="16sp"

        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"

       app:helperText="Error Message"
       app:counterEnabled="true"
       app:counterMaxLength="10"
       app:layout_constraintBottom_toTopOf="@+id/passwordId2"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/frameLayout"
       app:layout_constraintTop_toBottomOf="@+id/howToLoginId"
       tools:layout_editor_absoluteX="1dp"
       tools:layout_editor_absoluteY="48dp">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"


            android:inputType="number"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>





    <com.google.android.material.textfield.TextInputLayout

        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"

        android:id="@id/passwordId2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/password"
        android:inputType="number"
        android:textColor="@color/blue"
        android:textColorHint="@color/gray"
        android:textSize="16sp"

        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"

        app:helperText="Error Message"
        app:counterEnabled="true"
        app:counterMaxLength="9"
        app:layout_constraintBottom_toTopOf="@+id/passwordId2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@+id/howToLoginId"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="48dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/firstpagePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"

            android:inputType="numberPassword"
            android:textColor="@color/black"
            />
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>