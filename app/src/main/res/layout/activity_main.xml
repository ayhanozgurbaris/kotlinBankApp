<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/howToLoginId"
        android:layout_width="335dp"
        android:layout_height="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="38dp"
        android:text="@string/login_info"
        android:textAlignment="center"
        android:textColor="@color/tepe"
        android:textSize="16px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/countryCodeId"
        android:layout_width="128px"
        android:layout_height="56px"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittextbackgroung"
        android:ems="10"
        android:hint="ulkeKodu"
        android:inputType="textPersonName"
        android:paddingLeft="20px"
        android:paddingTop="7px"
        android:paddingRight="20px"
        android:paddingBottom="7px"
        android:textColorHint="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/howToLoginId" />

    <EditText
        android:id="@+id/gsmId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittextbackgroung"
        android:ems="10"
        android:hint="GSM Numaran"
        android:inputType="textPersonName"
        android:paddingLeft="20px"
        android:paddingTop="16px"
        android:paddingRight="20px"
        android:paddingBottom="16px"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/passwordId"
        app:layout_constraintEnd_toEndOf="@+id/passwordId"
        app:layout_constraintStart_toEndOf="@+id/countryCodeId"
        app:layout_constraintTop_toBottomOf="@+id/howToLoginId" />

    <EditText
        android:id="@+id/passwordId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittextbackgroung"
        android:ems="10"
        android:hint="Şifren"
        android:inputType="textPersonName"
        android:paddingLeft="20px"
        android:paddingTop="16px"
        android:paddingRight="20px"
        android:paddingBottom="16px"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gsmId" />

    <Button
        android:id="@+id/loginId"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/buttonbackground"
        android:text="Giriş"
        android:textSize="14px"
        app:layout_constraintEnd_toEndOf="@+id/passwordId"
        app:layout_constraintStart_toStartOf="@+id/passwordId"
        app:layout_constraintTop_toBottomOf="@+id/forgetPasswordId" />

    <TextView
        android:id="@+id/forgetPasswordId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:text="@string/forget_password"
        android:textColor="@color/mavi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordId" />


</androidx.constraintlayout.widget.ConstraintLayout>