<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/howToLoginId"
        android:layout_width="335dp"
        android:layout_height="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="38dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/login_info"
        android:textAlignment="center"
        android:textColor="@color/tepe"
        android:textSize="16px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/countryCodeId"
        android:layout_width="128px"
        android:layout_height="56px"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittextbackgroung"
        android:ems="10"
        android:hint="@string/ulke_kodu"
        android:inputType="textPersonName"
        android:paddingLeft="20px"
        android:paddingTop="7px"
        android:paddingRight="20px"
        android:paddingBottom="7px"
        android:textColorHint="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/howToLoginId" />


    <EditText
        android:id="@+id/gsmId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittextbackgroung"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/gsm_no"
        android:inputType="textPersonName"
        android:paddingLeft="20px"
        android:paddingTop="16px"
        android:paddingRight="20px"
        android:paddingBottom="16px"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/passwordId"
        app:layout_constraintEnd_toEndOf="@+id/passwordId"
        app:layout_constraintStart_toEndOf="@+id/countryCodeId"
        app:layout_constraintTop_toBottomOf="@+id/howToLoginId" />

    <EditText
        android:id="@+id/passwordId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittextbackgroung"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/password"
        android:inputType="textPersonName"
        android:paddingLeft="20px"
        android:paddingTop="16px"
        android:paddingRight="20px"
        android:paddingBottom="16px"
        android:textColor="@color/mavi"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gsmId" />

    <Button
        android:id="@+id/loginId"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/buttonbackground"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/giris"
        android:textSize="14px"
        app:layout_constraintEnd_toEndOf="@+id/passwordId"
        app:layout_constraintStart_toStartOf="@+id/passwordId"
        app:layout_constraintTop_toBottomOf="@+id/forgetPasswordId" />

    <Button
        android:id="@+id/forgetPasswordId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:background="?selectableItemBackground"
        android:fontFamily="@font/roboto_bold"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:includeFontPadding="false"
        android:text="@string/forget_password"
        android:textAllCaps="false"
        android:textColor="@color/mavi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordId" />


    <Button
        android:id="@+id/hesabınlaNelerYapabilirsin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:background="?selectableItemBackground"
        android:fontFamily="@font/roboto_medium"
        android:includeFontPadding="false"
        android:letterSpacing="0"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/hesabinla_neler_yapabilirsin"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginId" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="111dp"
        android:layout_height="62dp"
        android:layout_marginTop="56dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fups" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hesabınlaNelerYapabilirsin"
        app:layout_constraintVertical_bias="0.032"
        app:srcCompat="@drawable/image" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/image2" />

    <!--
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/countryCodeId"
        app:layout_constraintEnd_toEndOf="@+id/countryCodeId"
        app:layout_constraintStart_toStartOf="@+id/countryCodeId"
        app:layout_constraintTop_toTopOf="@+id/countryCodeId" />

    -->


</androidx.constraintlayout.widget.ConstraintLayout>